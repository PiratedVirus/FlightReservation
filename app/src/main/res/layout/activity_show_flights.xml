<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="3"
        android:layout_marginBottom="33dp"
        android:layout_gravity="center_vertical"
        android:background="@color/faintIndigo">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/startCityShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:text="NY"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/fullCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startCityShort"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:text="NEW YORK"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/departure"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/endCityShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:text="NY"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:id="@+id/endCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/endCityShort"
                android:text="NEW YORK"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="35dp"
                android:textStyle="bold" />
        </RelativeLayout>





    </LinearLayout>







    <ListView
        android:id="@+id/cart_list_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="30dp"
        android:divider="@null"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:background="@color/float_transparent"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginBottom="8sp"
        android:layout_below="@+id/textView3" />

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tickets"
        android:textAllCaps="true"
        android:textColor="#3FAAF2"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:onClick="viewTicket"/>










</LinearLayout>